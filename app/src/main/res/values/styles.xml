<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="LoadingScreenTheme" parent="Theme.MaterialComponents.DialogWhenLarge">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundTint">#8AFFFBFB</item>
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowAnimationStyle">@anim/fragment_close_exit</item>
    </style>

</resources>
